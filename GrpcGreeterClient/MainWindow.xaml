<Window x:Class="GrpcGreeterClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrpcGreeterClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnSendMessages" Content="Send Message" Click="btnSendMessages_Click" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <TextBlock Name="txtMessageReceive" Width="300" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0"/>
        <Button Name="btnListPersons" Content="List Persons" Click="btnListPersons_Click" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,130,0,0"/>
        <ListBox Name="lstPersons" Width="300" Height="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,200,0,0"/>
    </Grid>
</Window>
